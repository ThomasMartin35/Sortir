{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | Détail {{ member.name }}{% endblock %}

{% block body %}
    <h1>Détail du membre : {{ member.firstname }}</h1>

    <div class="card mt-2 mb-2 w-50 m-auto">
        <div class="card-body text-center">
            <h5 class="card-title">Nom : {{ member.name }} - Prénom : {{ member.firstname }}</h5>
            <p class="card-text">Téléphone : {{ member.phone }}</p>
            <p class="card-text">Email : {{ member.mail }}</p>
            <p class="card-text">{{ member.campus.name }}</p>
            <a href="{{ path('member_update', {'id': app.user.id}) }}" class="btn btn-primary">Modifier mon profil</a>
        </div>
    </div>

    <div class="text-center">
        <a class="btn btn-primary btn-sm" href="{{ path('main_home') }}" title="Retour à l'accueil">Retour</a>
    </div>

{% endblock %}