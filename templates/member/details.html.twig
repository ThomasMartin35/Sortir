{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | Détail {{ member.name }}{% endblock %}

{% block body %}
    <h1>Détail du membre : {{ member.firstname }}</h1>

    <div class="card mb-3 text-center" bis_skin_checked="1">
        <h3 class="card-header">Profil du membre</h3>
        <div class="card-body" bis_skin_checked="1">
            <h5 class="card-title">Nom : {{ member.name }}</h5>
            <h6 class="card-subtitle text-muted">Prénom : {{ member.firstname }}</h6>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
            <rect width="100%" height="100%" fill="#868e96"></rect>
            <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
        </svg>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Téléphone : {{ member.phone }}</li>
            <li class="list-group-item">Email : {{ member.mail }}</li>
            <li class="list-group-item">{{ member.campus.name }}</li>
        </ul>
        <div class="card-body" bis_skin_checked="1">
            <a href="{{ path('member_update', {'id': app.user.id}) }}" class="card-link">Modifier mon profil</a>
        </div>
    </div>

    <div class="text-center">
        <a class="btn btn-primary btn-sm" href="{{ path('main_home') }}" title="Retour à l'accueil">Retour</a>
    </div>


{% endblock %}